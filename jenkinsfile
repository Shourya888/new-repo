pipeline {
    agent any

    environment {
        APP_NAME = "portfolio-site"
        IMAGE_NAME = "portfolio-site-image"
        CONTAINER_PORT = "80"
        HOST_PORT = "8080"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Shourya888/new-repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME}:latest ."
            }
        }

        stage('Stop Old Container') {
            steps {
                script {
                    sh """
                    if [ \$(docker ps -q -f name=${APP_NAME}) ]; then
                      docker stop ${APP_NAME}
                      docker rm ${APP_NAME}
                    fi
                    """
                }
            }
        }

        stage('Run New Container') {
            steps {
                sh "docker run -d --name ${APP_NAME} -p ${HOST_PORT}:${CONTAINER_PORT} ${IMAGE_NAME}:latest"
            }
        }
    }
}
